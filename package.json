{
  "name": "@sfc-gh-dflippo/skills-mcp-server",
  "version": "0.0.1",
  "description": "MCP server built with FastMCP that serves skills sync scripts as downloadable resources",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "skills-mcp-server": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sfc-gh-dflippo/skills-mcp-server.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@sfc-gh-dflippo:registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/resources && cp src/resources/*.py src/resources/*.ts src/resources/*.md dist/resources/",
    "dev": "npx fastmcp dev src/index.ts",
    "start": "node dist/index.js",
    "test": "npm run build && npm-run-all --parallel test:install test:server:nobuild test:ts-script test:py-script:nobuild",
    "test:serial": "npm run test:install && npm run test:server && npm run test:ts-script && npm run test:py-script",
    "test:install": "tsx tests/test-install.ts",
    "test:server": "npm run build && tsx tests/test-server.ts",
    "test:server:nobuild": "tsx tests/test-server.ts",
    "test:ts-script": "tsx tests/test-sync-script.ts",
    "test:py-script": "npm run build && cd .. && . skills-mcp-server/.venv-test/bin/activate && pytest skills-mcp-server/tests/test_sync_script.py -v -n auto",
    "test:py-script:nobuild": "cd .. && . skills-mcp-server/.venv-test/bin/activate && pytest skills-mcp-server/tests/test_sync_script.py -v -n auto",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "inspect": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "postinstall": "node scripts/postinstall-fix.mjs"
  },
  "keywords": [
    "mcp",
    "fastmcp",
    "skills",
    "ai",
    "agent",
    "model-context-protocol",
    "code-execution"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "fastmcp": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^24.10.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.17.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.19.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
